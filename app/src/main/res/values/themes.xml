<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.FireDetection" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:colorBackground">@color/background_color</item>
        <item name="colorSurface">@color/surface_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSurface">@color/primary_text</item>
        <item name="colorOnSurfaceVariant">@color/secondary_text</item>
        
        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Typography -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.FireDetection.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.FireDetection.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.FireDetection.HeadlineSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.FireDetection.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.FireDetection.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.FireDetection.BodySmall</item>
    </style>

    <!-- Typography styles -->
    <style name="TextAppearance.FireDetection.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="TextAppearance.FireDetection.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="TextAppearance.FireDetection.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="TextAppearance.FireDetection.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="TextAppearance.FireDetection.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="TextAppearance.FireDetection.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/secondary_text</item>
    </style>
</resources> 